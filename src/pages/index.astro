---
import Header from "@components/Header.astro";
import Layout from "@layouts/Layout.astro";
import Footer from "@components/Footer.astro";
import Card from "@components/Card.astro";
---

<Layout
  title="OTG Solutions AS | Utvikling av IT systemer | Konsulenttjenester"
  description="Utvikling av IT systemer. Konsulenttjenester"
>
  <Header />
  <main>
    <ul role="list" class="link-card-grid">
      <Card
        href="/om-oss"
        title="Om oss 🏢"
        body="Vårt firma spesialiserer seg på rådgivning, teknologitjenester og digital transformasjon."
      />
      <!-- <Card
        href="/prosjekter"
        title="Prosjekter 🏗️"
        body="Supercharge your project with new frameworks and libraries."
      /> -->
      <!-- <Card
        href="/tjenester"
        title="Tjenester 💻"
        body="Tilpassede programvareløsninger for å møte dine unike forretningsbehov."
      /> -->
      <Card
        href="/kontakt-oss"
        title="Kontakt oss 📩"
        body="Hvordan kan vi hjelpe dere? Kontakt oss for en uforpliktende samtale."
      />
    </ul>
  </main>
  <Footer />
</Layout>

<style>
  .link-card-grid {
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }
</style>
