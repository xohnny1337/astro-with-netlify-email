---
const { id, label } = Astro.props;
---

<fieldset>
  <label for={id}>{label}</label>
  <input {...Astro.props} id={id} name={id} />
</fieldset>

<style>
  fieldset {
    padding: 0;
    margin: 0;
    border: unset;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    max-width: 50ch;
  }
  input {
    border: var(--border-primary);
    border-radius: var(--border-radius);
    padding: 1rem;
  }
</style>
